   "source": [
    "from datetime import date\n",
    "\n",
    "today = date.today()\n",
    "day_of_week = today.weekday()\n",
    "\n",
    "if day_of_week >= 5:\n",
    "    status = \"Сьогодні вихідний!\"\n",
    "else:\n",
    "    status = \"Сьогодні робочий день.\"\n",
    "\n",
    "print(f\"{today}: {status}\")"
   ]
